import Head from 'next/head'
import { useState, useRef } from 'react'
import html2canvas from 'html2canvas'

export default function Home() {
  const [topic, setTopic] = useState('')
  const [generatedStory, setGeneratedStory] = useState('')
  const [loading, setLoading] = useState(false)
  const storyRef = useRef(null)

  const handleGenerate = async () => {
    setLoading(true)
    const response = await fetch('/api/generate', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ topic })
    })

    const data = await response.json()
    setGeneratedStory(data.story)
    setLoading(false)
  }

  const handleDownload = async () => {
    if (!storyRef.current) return
    const canvas = await html2canvas(storyRef.current)
    const link = document.createElement('a')
    link.download = 'instagram-story.png'
    link.href = canvas.toDataURL()
    link.click()
  }

  return (
    <div className="min-h-screen bg-gray-100 flex flex-col items-center justify-center p-4">
      <Head>
        <title>AI Story Generator</title>
      </Head>

      <div className="max-w-md w-full bg-white shadow-lg rounded-2xl p-6">
        <h1 className="text-2xl font-bold mb-4 text-center">Instagram Story Generator</h1>
        <textarea
          value={topic}
          onChange={(e) => setTopic(e.target.value)}
          placeholder="Enter your topic (e.g. Perfume Sale 20%)"
          className="w-full p-3 border rounded-md mb-4"
          rows={3}
        />
        <button
          onClick={handleGenerate}
          disabled={loading || !topic.trim()}
          className="w-full bg-blue-500 text-white font-semibold py-2 rounded-md hover:bg-blue-600"
        >
          {loading ? 'Generating...' : 'Generate Story'}
        </button>

        {generatedStory && (
          <>
            <div ref={storyRef} className="mt-6 relative w-full h-96 bg-gradient-to-br from-pink-500 via-red-500 to-yellow-500 rounded-xl flex items-center justify-center text-center">
              <div className="bg-white bg-opacity-80 p-4 rounded-lg shadow-lg">
                <h2 className="text-xl font-bold">{generatedStory}</h2>
              </div>
            </div>
            <button
              onClick={handleDownload}
              className="w-full mt-4 bg-green-500 text-white font-semibold py-2 rounded-md hover:bg-green-600"
            >
              Download as Image
            </button>
          </>
        )}
      </div>
    </div>
  )
}

// File: /pages/api/generate.js

export default async function handler(req, res) {
  if (req.method !== 'POST') {
    return res.status(405).json({ message: 'Method not allowed' })
  }

  const { topic } = req.body

  const prompt = `Create a catchy Instagram Story text for this topic: "${topic}". Make it engaging and perfect for social media.`

  try {
    const response = await fetch('https://api.openai.com/v1/chat/completions', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'Authorization': `Bearer ${process.env.OPENAI_API_KEY}`
      },
      body: JSON.stringify({
        model: 'gpt-3.5-turbo',
        messages: [{ role: 'user', content: prompt }]
      })
    })

    const data = await response.json()
    const story = data.choices[0].message.content.trim()
    res.status(200).json({ story })

  } catch (error) {
    console.error(error)
    res.status(500).json({ message: 'Error generating story' })
  }
}

